@page
@model MyApp.Areas.Admin.Pages.Users.IndexModel
@{
    int i = 1;
}

<h2>Admin</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>UserName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UserList)
        {
            <tr>
                <td>@i</td>
                <td>@user.UserName</td>
                <td>
                    <a asp-page="details" asp-route-userid="@user.Id" class="btn btn-info">Details </a>
                </td>
            </tr>
            i++;
        }


    </tbody>
</table>